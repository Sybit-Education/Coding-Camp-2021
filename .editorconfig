# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue,y{a,}ml}]
indent_style = space
indent_size = 2

[*.{md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
